<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/searchlayout"
        android:orientation="horizontal"
        tools:ignore="UselessParent">


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="3dp"
            android:autofillHints=""
            android:background="@drawable/edittextbg"
            android:hint="@string/search_any_images_here"
            android:inputType=""
            android:padding="10dp"
            android:textColorHint="#07F426"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:typeface="serif"
            tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="-60dp"
            android:src="@drawable/search"
            android:backgroundTint="@color/cardview_shadow_end_color"
            tools:ignore="SpeakableTextPresentCheck,VisualLintBounds"
            android:contentDescription="Imagebutton" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchlayout"
        android:id="@+id/bottomlayout"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        tools:ignore="ExtraText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/nature"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradientnature"
                    android:gravity="end"
                    android:paddingTop="17dp"
                    android:paddingRight="14dp"
                    android:text="Nature"
                    android:textColor="#EDED06"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="VisualLintOverlap" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/cardview_dark_background"
                    android:src="@drawable/basketball"
                    tools:ignore="ImageContrastCheck"></ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bus"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradientbus"
                    android:gravity="end"
                    android:paddingTop="17dp"
                    android:paddingRight="14dp"
                    android:text="Bus"
                    android:textColor="#EDED06"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="VisualLintOverlap" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/cardview_dark_background"
                    android:src="@drawable/basketball"
                    tools:ignore="ImageContrastCheck"></ImageView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/car"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradientcar"
                    android:gravity="end"
                    android:paddingTop="17dp"
                    android:paddingRight="14dp"
                    android:text="Car"
                    android:textColor="#EDED06"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="VisualLintOverlap" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/cardview_dark_background"
                    android:src="@drawable/basketball"
                    tools:ignore="ImageContrastCheck"></ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/train"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradienttrain"
                    android:gravity="end"
                    android:paddingTop="17dp"
                    android:paddingRight="14dp"
                    android:text="Train"
                    android:textColor="#EDED06"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="VisualLintOverlap" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/cardview_dark_background"
                    android:src="@drawable/basketball"
                    tools:ignore="ImageContrastCheck"></ImageView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/trending"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradienttrending"
                    android:gravity="end"
                    android:paddingTop="19dp"
                    android:paddingRight="11dp"
                    android:text="Trending"
                    android:textColor="#EDED06"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="VisualLintOverlap" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/cardview_dark_background"
                    android:src="@drawable/trending"
                    tools:ignore="ImageContrastCheck"></ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/natured"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:clickable="false"
                android:visibility="invisible"
                app:cardCornerRadius="10dp"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradientnature"
                    android:clickable="false"
                    android:gravity="end"
                    android:paddingTop="17dp"
                    android:paddingRight="14dp"
                    android:text="Nature"
                    android:textColor="#EDED06"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    tools:ignore="VisualLintOverlap" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/cardview_dark_background"
                    android:clickable="false"
                    android:src="@drawable/basketball"
                    android:visibility="invisible"
                    tools:ignore="ImageContrastCheck"></ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/bottomlayout"
            android:padding="2dp"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    </RelativeLayout>
